{
  "parser": "babel-eslint",
    "extends": [
      "airbnb",
    ],
    "plugins": [
      "react",
    "immutable",
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jasmine": true,
      "mocha": true
    },
    "rules": {
      "no-var": 2,
      "prefer-const": 2,
      "no-undef": 2,
      "no-unused-vars": 2,
      "no-console": 1,
      "new-cap": 1,
      "strict": 0,
      "react/prop-types": 1,
      "immutable/no-let": 2,
      "immutable/no-this": 2,
      "immutable/no-mutation": 2,
      "no-use-before-define": 0, // disallow use of variables before they are defined
    }
}
